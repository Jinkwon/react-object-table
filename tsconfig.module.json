{
  "compileOnSave": true,
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "react",
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./out",
    "lib": ["dom", "esnext"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}
