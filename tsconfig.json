{
  "compileOnSave": true,
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve",
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./out",
    "lib": [
      "dom",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}
